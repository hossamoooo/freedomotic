<config>
    <!-- PLUGINS PARAMETERS --> 
    <properties>
        <property name="name" value="udoodomoshield"/>
        <property name="description" value="UDOO DomuShield controller"/>
        <property name="category" value="protocol"/>
        <property name="short-name" value="udoo-domushield"/>
        <property name="protocol.name" value="udoo-domushield"/>

    <!-- SERIAL PORT PARAMETERS --> 
        <property name="serial.port" value="COM6"/>       
        <property name="serial.baudrate" value="9600"/>
        <property name="serial.databits" value="8"/>
        <property name="serial.parity" value="0"/>
        <property name="serial.stopbits" value="1"/>
        <property name="chunk.terminator" value="&#59;"/>
        <property name="chunk.size" value="5"/>

    <!-- SERIAL PROTOCOL PARAMETERS --> 
        <property name="data-delimiter" value=","/>
        <property name="value-delimiter" value="#"/>
    </properties>

    <tuples>
        <tuple>
            <property name="object.class" value="Thermometer"/>
            <property name="temperature" value="UDOO DomuShield reads temperature"/>
        </tuple>
        <tuple>
            <property name="object.class" value="Light Sensor"/>
            <property name="luminosity" value="UDOO DomuShield reads luminosity"/>
        </tuple>
        <tuple>
            <property name="object.class" value="Hygrometer"/>
            <property name="humidity" value="UDOO DomuShield reads humidity"/>
        </tuple>
        <tuple>
            <property name="object.class" value="Light"/>
            <property name="powered" value="UDOO DomuShield reads relay status"/>
            <property name="turn on" value="Turn ON relay on UDOO DomuShield"/>
            <property name="turn off" value="Turn OFF relay on UDOO DomuShield"/>
        </tuple>
    </tuples>
</config>

                
