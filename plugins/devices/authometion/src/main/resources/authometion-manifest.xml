<config>
    <!-- PLUGINS DEFAULT PARAMETERS --> 
    <properties>
        <property name="name" value="authometion"/>
        <property name="description" value="Controls LYT Rgbw lights"/>
        <property name="category" value="protocol"/>
        <property name="short-name" value="authometion"/>
        <property name="protocol.name" value="authometion"/>
         <property name="startup-time" value="on load"/>
    <!-- SERIAL COMMUNICATION PARAMETERS --> 
        <property name="serial.port" value="/dev/ttyACM0"/>       
        <property name="serial.baudrate" value="9600"/>
        <property name="serial.databits" value="8"/>
        <property name="serial.parity" value="0"/>
        <property name="serial.stopbits" value="1"/>
        <property name="chunk.terminator" value="&#xA;"/>
        <property name="chunk.size" value="5"/>
        <property name="delimiter" value=","/>
        <property name="save-lights-configuration" value="false"/>
    </properties>
</config>

                
