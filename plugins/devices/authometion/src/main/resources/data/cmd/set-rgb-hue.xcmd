<command>
    <name>Authometion: Set RGB light hue</name>
    <receiver>app.actuators.protocol.authometion.in</receiver>
    <description>set the hue of an Authometion LYT/RGB light</description>
    <hardwareLevel>true</hardwareLevel>
    <delay>0</delay>
    <timeout>0</timeout>
    <properties>
        <properties>
            <property name="authometion.command" value="HSB"/>
            <property name="address" value="@owner.object.address"/>
            <property name="brightness" value="@owner.object.behavior.brightness"/>
            <property name="hue" value="@value"/>
            <property name="saturation" value="@owner.object.behavior.saturation"/>
        </properties>
    </properties>
</command>
