<config>
    <properties>
        <property name="name" value="Souliss"/>
        <property name="description" value="Communicates with Souliss boards"/>
        <property name="protocol.name" value="souliss"/>
        <property name="category" value="protocol"/>
        <property name="short-name" value="souliss"/>
        <property name="address-delimiter" value=":"/>
        <property name="socket-timeout" value="30000"/>
        <property name="polling-time" value="1000"/>
    </properties>
    <tuples>
		<tuple>
            <property name="ip-to-query" value="192.168.1.10"/>
            <property name="port-to-query" value="8080"/>
            <property name="status-to-query" value="http://192.168.1.10:8080/status"/>
        </tuple>
        <tuple>
            <property name="object.class" value="Light"/>
            <property name="powered" value="Souliss reads a state change"/>
			<property name="turn on" value="Turn ON Souliss typical 11"/>
            <property name="turn off" value="Turn OFF Souliss typical 11"/>
        </tuple>
		<tuple>
            <property name="object.class" value="Thermostat"/>
            <property name="temperature" value="Souliss reads analog scale 10"/>
		</tuple>
		<tuple>
            <property name="object.class" value="Hygrometer"/>
            <property name="humidity" value="Souliss reads analog scale 10"/>
		</tuple>
		<tuple>
            <property name="object.class" value="Light Sensor"/>
            <property name="luminosity" value="Souliss reads analog scale 10"/>
		</tuple>
		<tuple>
            <property name="object.class" value="PowerMeter"/>
            <property name="power" value="Souliss reads analog"/>
		</tuple>
		<tuple>
            <property name="object.class" value="Barometer"/>
            <property name="pressure" value="Souliss reads analog scale 10"/>
		</tuple>				
	</tuples>
</config>

                
